@{
    ViewData["Title"] = "Главная страница";
}

<!DOCTYPE html>
<html>
<head>
    <title>Заметки</title>
    <!-- Подключение jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <!-- Подключение CSS -->
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div id="mainContainer">
        <!-- Блок поиска -->
        <section id="searchBlock">
            <h2>Поиск заметок</h2>
            <div style="position: relative;">
                <input type="text"
                       id="searchBox"
                       placeholder="Введите текст для поиска"
                       autocomplete="off"; />

                <select id="searchType">
                    <option value="substring">По подстроке</option>
                    <option value="startswith">По первым буквам</option>
                </select>

                <div id="suggestionsBox" class="suggestions"></div>
            </div>
        </section>

        <!-- Блок добавления -->
        <section id="addBlock">
            <h2>Добавление новой заметки</h2>
            <div>
                <input type="text"
                       id="noteInput"
                       placeholder="Введите заголовок новой заметки"; />
            </div>
            <button id="addNoteButton">Добавить</button>
        </section>
    </div>
    <script src="~/js/script.js"></script>
</body>
</html>
